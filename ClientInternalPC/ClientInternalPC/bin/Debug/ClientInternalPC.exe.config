<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>
    <appSettings>
        <!-- Relay Server 설정 -->
        <add key="RelayHost" value="localhost" />
        <add key="RelayPort" value="8080" />
        <add key="RelayToken" value="default-token-change-in-production" />
        <add key="UseSecure" value="false" />
        
        <!-- 허용된 도메인 목록 (쉼표 또는 세미콜론으로 구분, 비어있으면 모든 도메인 허용) -->
        <!-- 예: <add key="AllowedDomains" value="internal-api.company.com,internal-service.company.com" /> -->
        <add key="AllowedDomains" value="" />
    </appSettings>
</configuration>